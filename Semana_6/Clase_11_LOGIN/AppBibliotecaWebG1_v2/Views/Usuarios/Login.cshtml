@* Es muy importante indicar el objeto modelo*@
@model AppBibliotecaWebG1.Models.Usuario

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Login</h1>
<div>
    <div class="row">
        <div class="col-sm-4"></div>

        @*Aqui se usa el formulario para la autenticacion*@
        <div class="col-sm-4">
            <form asp-action="Login" asp-controller="Usuarios" id="FormularioLogin">
                @* Solicitud del email*@
                <div class="form-group">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="jose@AppDomain.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>

                </div>

                @*Solicitud de la contraseña*@
                <div class="form-group
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" class="form-control" placeholder="********"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                    No tienes una cuenta?
                    <a asp-action="CrearCuenta" asp-controller="Usuarios">Registrarse</a>
                 </div>

                @*Boton encargado de ejecutar el post de fomulario*@
                <div class="form-group">
                    <div class="col-auto">
                        <input type="submit" value="Aceptar" class="btn btn-primary" />
                    </div>

                </div>

            </form>

        </div>

        <div class="col-sm-4"></div>

    </div>
</div>

