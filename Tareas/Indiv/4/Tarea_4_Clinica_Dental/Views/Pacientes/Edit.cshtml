@model Tarea_3_Clinica_Dental.Models.Paciente

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Paciente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="idPaciente" class="control-label"></label>
                <input asp-for="idPaciente" class="form-control" readonly/>
                <span asp-validation-for="idPaciente" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cedula" class="control-label"></label>
                <input asp-for="Cedula" class="form-control" />
                <span asp-validation-for="Cedula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Procedimiento" class="control-label"></label>
                
                <select asp-for="Procedimiento" class="form-control">
                    <option selected="selected" value="Limpieza">Limpieza - ¢15,000.00</option>
                    <option value="Calzas">Calzas - ¢25,000.00</option>
                    <option value="Extracciones">Extracciones - ¢10,000.00</option>
                    <option value="Blanqueamiento">Blanqueamiento - ¢35,000.00</option>
                    <option value="Ortodoncia">Ortodoncia - ¢355,000.00</option>
                </select>

                <span asp-validation-for="Procedimiento" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
