        }

        .row:nth-child(even) .text {
            margin-left: auto;
            margin-right: 0;
            text-align: right;
        }

    .image-container {
        max-width: 50%; /* Ajusta el tamaño máximo del contenedor de imagen */
    }

        .image-container img {
            width: 100%; /* Ajusta el tamaño de la imagen al 100% del contenedor */
            height: 70%;
