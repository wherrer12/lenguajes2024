@using System.Security.Claims
@model WebHotelBeach.Models.Cliente

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">

    <form id="Formulario">


        <!-------Pregunta si el que esta viendo el detalle es el admin y son los datos de un cliente------>
        <!------- o si es un client el que lo esta viendo, esto ultimo es gracias a la configuracion del layout------>
        @if (Model.RolSistema.Equals("cliente"))
        {
            <h1>Details</h1>

            <div>
                <h4>Cliente</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Id)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Id)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.TipoCedula)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TipoCedula)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Cedula)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Cedula)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Nombre)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Telefono)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Telefono)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Direccion)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Direccion)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.RolSistema)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.RolSistema)
                    </dd>
                </dl>
            </div>
            <div>

                @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-sm btn-secondary mt-3" }) |
                <a asp-action="Index" asp-controller="Home" class="btn btn-sm btn-dark mt-3">Home</a>
               |
                @Html.ActionLink("Borrar cuenta", "Delete", new { id = Model.Id }, new { @class = "btn btn-sm btn-danger mt-3" })
            </div>
        }
        else
        {
            <!---------Estamos viendo los datos del admin------------>
            <h1>Details</h1>

            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Id)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Id)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Nombre)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.RolSistema)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.RolSistema)
                    </dd>
                </dl>
            </div>
            <div>
                <a asp-action="Index" asp-controller="Home" class="btn btn-dark mt-3">Home</a>
            </div>
        }

        

    </form>


</div>

